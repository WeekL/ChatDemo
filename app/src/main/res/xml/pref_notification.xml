<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="账户设置">
        <Preference
            android:key="@string/设置个人信息"
            android:title="设置个人信息" />
        <Preference
            android:key="@string/切换用户"
            android:title="切换用户" />
    </PreferenceCategory>

    <PreferenceCategory android:title="消息提醒">
        <SwitchPreference
            android:defaultValue="true"
            android:icon="@mipmap/sound"
            android:key="@string/声音开关"
            android:title="声音" />
        <SwitchPreference
            android:defaultValue="true"
            android:icon="@mipmap/vibrate"
            android:key="@string/震动开关"
            android:title="震动" />
    </PreferenceCategory>

</PreferenceScreen>
