<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PopupMenuTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:actionMenuTextColor">#000</item>
        <item name="overlapAnchor">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LoginEditText">
        <item name="android:textColorHint">@color/colorLoginText</item>
        <item name="android:textColor">@color/colorLoginText</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

</resources>
